---
import Landing from '@layouts/Landing.astro';

import { Card, CardRow } from '@components/mc';
import { HelpItem } from '@components/items';

import Spacer from '@components/Spacer.astro';

import { getCollection } from 'astro:content';

const allHelps = (await getCollection("help")).sort(
  (a, b) => Number(a.data.sort_order) - Number(b.data.sort_order)
);
---

<Landing page_title="Помощь">
	<Card title="Помощь" mode='blank'>
		{ allHelps.map(item =>
			<CardRow>
				<HelpItem {item} />
			</CardRow>
		) }
	</Card>

	<Spacer height="100" />
</Landing>
