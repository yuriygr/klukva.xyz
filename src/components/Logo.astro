---
import LogoImage from '@assets/logo.png'

interface Props {
  maxWidth?: number;
}

const { maxWidth = 360 } = Astro.props;
---

<div class="logo">
  <img src={LogoImage.src} alt="" draggable="false" />
</div>

<style lang="scss" define:vars={{ 'max-width': `${maxWidth}px` }}>
.logo {
  display: flex;
  justify-content: center;
  align-items: center;

  img {
    display: block;
    width: 100%;
    height: 100%;
    max-width: var(--max-width);
    user-select: none;
    pointer-events: none;
  }
}
</style>