---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  item: CollectionEntry<'plugins'>;
}

const { item } = Astro.props;
---

<a class="card-mod" target="_blank" href={item.data.url}>
  <div class="card-mod__icon">
    <Image src={item.data.icon} densities={[ 1.5, 2 ]} format={'png'} alt={`Иконка мода ${item.data.title}`} width={48} height={48} />
  </div>
  <div class="card-mod__content">
    <div class="card-mod__title" set:text={item.data.title}/>
    <div class="card-mod__info" set:text={item.data.info}/>
  </div>
</a>

<script>

</script>

<style lang="scss">
$icon-size: 48px;

.card-mod {
  display: grid;
  grid-template-columns: $icon-size auto;
  margin: -1rem;
  padding: 1rem;

  @media(hover: hover) {
    &:hover {
      background-color: #00000035;
      color: inherit;
      text-decoration: none;
    }
  }

  &__icon {
    background: #c6c6c6;
    border-radius: 8px;
    height: $icon-size;
    width: $icon-size;
    overflow: hidden;
    text-decoration: none;
    
    img {
      margin: -1px;
      display: block;
      width: calc(100% + 2px);
      height: calc(100% + 2px);
      overflow: hidden;
      border:none;
      background-clip: content-box;
      user-select: none;
      pointer-events: none;
    }
  }

  &__content {
    display: flex;
    flex-direction: column;
    margin-left: 1rem;
  }

  &__title {
    white-space: pre-line;
    word-wrap: break-word;
    word-break: break-word;
    color: #d5d5d5;
    font-size: 1.2rem;
    line-height: calc(1.4 * 1em);
    margin-bottom: .25rem;
  }

  &__info {
    white-space: pre-line;
    word-wrap: break-word;
    word-break: break-word;
    color: #aaa;
    font-size: 1.1rem;
    line-height: calc(1.4 * 1em);
  }
}
</style>
