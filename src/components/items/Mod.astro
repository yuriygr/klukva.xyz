---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  item: CollectionEntry<'plugins'>;
}

const { item } = Astro.props;
---

<div class="card-mod">
  <div class="card-mod__icon">
    <Image src={item.data.icon} densities={[ 1.5, 2 ]} format={'png'} alt={`Иконка мода ${item.data.title}`} width={48} height={48} />
  </div>
  <div class="card-mod__content">
    <div class="card-mod__title" set:text={item.data.title}/>
    <div class="card-mod__info" set:text={item.data.info}/>
    <div class="card-mod__meta">
      <a class="card-mod__open" target="_blank" href={item.data.url}>Подробнее</a>
    </div>
  </div>
</div>

<script>

</script>

<style lang="scss">
$icon-size: 48px;

.card-mod {
  display: grid;
  grid-template-columns: $icon-size auto;

  &__icon {
    img {
      background: #c6c6c6;
      border-radius: 8px;
      display: block;
      height: $icon-size;
      width: $icon-size;
    }
  }

  &__content {
    display: flex;
    flex-direction: column;
    margin-left: 1rem;
  }

  &__title {
    white-space: pre-line;
    word-wrap: break-word;
    word-break: break-word;
    color: #d5d5d5;
    font-size: 1.3rem;
    line-height: calc(1.4 * 1em);
    margin-bottom: .25rem;
  }

  &__info {
    white-space: pre-line;
    word-wrap: break-word;
    word-break: break-word;
    color: #aaa;
    font-size: 1.2rem;
    line-height: calc(1.4 * 1em);
    margin-bottom: .75rem;
  }

  &__meta {
    color: #bababa;
    font-size: 1.2rem;
    line-height: calc(1.4 * 1em);
  }

  &__open {
    color: #bababa;
    text-decoration: underline;

    @media(hover: hover) {
      &:hover {
        color: #d5d5d5;
      }
    }
  }
}
</style>
